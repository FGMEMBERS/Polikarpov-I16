<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>i16.ac</path>

  <nasal>
    <load>
      var livery_update = aircraft.livery_update.new("Aircraft/Polikarpov-I16/Models/Liveries", 10);
    </load>
    <unload>
      livery_update.stop();
    </unload>
  </nasal>

  <animation>
    <!-- Objets opaques -->
    <object-name>fuselage</object-name>
    <object-name>ailes</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>bol</object-name>
    <object-name>porteG</object-name>
    <object-name>porteD</object-name>
    <object-name>derive</object-name>
    <object-name>roueG</object-name>
    <object-name>roueD</object-name>
    <object-name>roueA</object-name>
    <object-name>echappes</object-name>
    <object-name>profondeur</object-name>
    <object-name>direction</object-name>
    <object-name>trous</object-name>
    <object-name>helice</object-name>
    <object-name>cacheair</object-name>
    <object-name>axeG</object-name>
    <object-name>porteG1</object-name>
    <object-name>porteG2</object-name>
    <object-name>axeD</object-name>
    <object-name>porteD1</object-name>
    <object-name>porteD2</object-name>
    <object-name>axeA</object-name>

    <!-- Objets transparents -->
    <object-name>vitres</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>glass_shader.png</texture>
    <object-name>vitres</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitres</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>fuselage</object-name>
    <object-name>ailes</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>bol</object-name>
    <object-name>porteG</object-name>
    <object-name>porteD</object-name>
    <object-name>derive</object-name>
    <object-name>roueG</object-name>
    <object-name>roueD</object-name>
    <object-name>roueA</object-name>
    <object-name>echappes</object-name>
    <object-name>profondeur</object-name>
    <object-name>direction</object-name>
    <object-name>trous</object-name>
    <object-name>helice</object-name>
    <object-name>cacheair</object-name>
    <object-name>axeG</object-name>
    <object-name>porteG1</object-name>
    <object-name>porteG2</object-name>
    <object-name>axeD</object-name>
    <object-name>porteD1</object-name>
    <object-name>porteD2</object-name>
    <object-name>axeA</object-name>

    <property-base>sim/model/livery</property-base>
    <texture-prop>texture</texture-prop>
    <texture>texture.png</texture>
  </animation>

  <!-- Intérieur -->
  <model>
    <path>Aircraft/Polikarpov-I16/Models/Interior/interior.xml</path>
    <offsets>
      <x-m>  0 </x-m>
      <y-m>  0 </y-m>
      <z-m>  0 </z-m>
      <roll-deg>    0 </roll-deg>
      <pitch-deg>   0 </pitch-deg>
      <heading-deg> 0 </heading-deg>
    </offsets>
  </model>

  <!-- Imatriculation
  <model>
    <path>Aircraft/Polikarpov-I16/Models/Immat/immat.xml</path>
    <offsets>
      <x-m>  0 </x-m>
      <y-m>  0 </y-m>
      <z-m>  0 </z-m>
      <roll-deg>    0 </roll-deg>
      <pitch-deg>   0 </pitch-deg>
      <heading-deg> 0 </heading-deg>
    </offsets>
  </model> -->

  <!-- L'hélice --> 
  <animation>
    <name>HeliceComplete</name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
    <object-name>helice</object-name>
    <object-name>bol</object-name>
  </animation>

  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc</object-name>
    <condition>
      <greater-than>
        <property>/engines/engine[0]/rpm</property>
        <value>1500</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur</object-name>
    <condition>
    <and>
      <greater-than>
        <property>/engines/engine[0]/rpm</property>
        <value>600.000</value>
      </greater-than>
      <less-than>
        <property>/engines/engine[0]/rpm</property>
        <value>1500.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice</object-name>
    <condition>
      <less-than>
        <property>/engines/engine[0]/rpm</property>
        <value>1500</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>HeliceComplete</object-name>
    <property>/engines/engine[0]/rpm</property>
    <factor> 1 </factor>
    <center>
      <x-m> -2.766 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.030 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- Ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>
    <property>/surface-positions/left-aileron-pos-norm</property>
    <factor>20.0</factor>
    <axis>
      <x1-m> -0.594 </x1-m>
      <y1-m> -4.032 </y1-m>
      <z1-m> -0.174 </z1-m>
      <x2-m> -0.219 </x2-m>
      <y2-m> -1.637 </y2-m>
      <z2-m> -0.236 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>aileronD</object-name>
    <property>/surface-positions/right-aileron-pos-norm</property>
    <factor>20.0</factor>
    <axis>
      <x1-m> -0.219 </x1-m>
      <y1-m>  1.637 </y1-m>
      <z1-m> -0.236 </z1-m>
      <x2-m> -0.594 </x2-m>
      <y2-m>  4.032 </y2-m>
      <z2-m> -0.174 </z2-m>
    </axis>
  </animation>

  <!-- Gouverne de profondeur -->
  <animation>
    <type>rotate</type>
    <object-name>profondeur</object-name>
    <property>/surface-positions/elevator-pos-norm</property>
    <factor> 20.0 </factor>
    <center>
      <x-m> 2.610 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.022 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y>  1 </y> 
      <z>  0 </z>
    </axis>
  </animation>

  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction</object-name>
    <property>/surface-positions/rudder-pos-norm</property>
    <factor> 20.0 </factor>
    <center>
      <x-m> 2.444 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.942 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y>  0 </y> 
      <z>  1 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>porteG</object-name>
    <property>/instrumentation/doors/crew/position-norm</property>
    <factor> 175 </factor>
    <axis>
      <x1-m> -0.086 </x1-m>
      <y1-m> -0.411 </y1-m>
      <z1-m>  0.408 </z1-m>
      <x2-m>  0.214 </x2-m>
      <y2-m> -0.390 </y2-m>
      <z2-m>  0.408 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>porteD</object-name>
    <property>/instrumentation/doors/passenger/position-norm</property>
    <factor> 175 </factor>
    <axis>
      <x1-m>  0.214 </x1-m>
      <y1-m>  0.390 </y1-m>
      <z1-m>  0.408 </z1-m>
      <x2-m> -0.086 </x2-m>
      <y2-m>  0.411 </y2-m>
      <z2-m>  0.408 </z2-m>
    </axis>
  </animation>

  <!-- Sortie/Rentrée du train -->
  <animation>
    <name>TrainG</name>
    <object-name>axeG</object-name>
    <object-name>roueG</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>TrainG</object-name>
    <property>/gear/gear[0]/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep> 90 </dep></entry>
      <entry><ind> 1 </ind><dep>  0 </dep></entry>
    </interpolation>
    <center>
      <x-m> -1.593 </x-m>
      <y-m> -1.216 </y-m>
      <z-m> -0.388 </z-m>
    </center>
    <axis>
      <x>  1 </x>
      <y>  0 </y> 
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>TrainG</object-name>
    <property>/gear/gear[0]/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep> -38 </dep></entry>
      <entry><ind> 1 </ind><dep>   0 </dep></entry>
    </interpolation>
    <center>
      <x-m> -1.593 </x-m>
      <y-m> -1.216 </y-m>
      <z-m> -0.388 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y>  1 </y> 
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <name>TrainD</name>
    <object-name>axeD</object-name>
    <object-name>roueD</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>TrainD</object-name>
    <property>/gear/gear[1]/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep> -90 </dep></entry>
      <entry><ind> 1 </ind><dep>   0 </dep></entry>
    </interpolation>
    <center>
      <x-m> -1.593 </x-m>
      <y-m>  1.216 </y-m>
      <z-m> -0.388 </z-m>
    </center>
    <axis>
      <x>  1 </x>
      <y>  0 </y> 
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>TrainD</object-name>
    <property>/gear/gear[1]/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep> -38 </dep></entry>
      <entry><ind> 1 </ind><dep>   0 </dep></entry>
    </interpolation>
    <center>
      <x-m> -1.593 </x-m>
      <y-m>  1.216 </y-m>
      <z-m> -0.388 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y>  1 </y> 
      <z>  0 </z>
    </axis>
  </animation>

  <!-- Ouverture/Fermeture des portes du train -->
  <animation>
    <name>PorteTrainG</name>
    <object-name>porteG1</object-name>
    <object-name>porteG2</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>PorteTrainG</object-name>
    <property>/gear/gear[0]/position-norm</property>
    <factor>38</factor>
    <center>
      <x-m> -1.593 </x-m>
      <y-m> -1.216 </y-m>
      <z-m> -0.388 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y>  1 </y> 
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>PorteTrainG</object-name>
    <property>/gear/gear[0]/position-norm</property>
    <factor>-90</factor>
    <center>
      <x-m> -1.593 </x-m>
      <y-m> -1.216 </y-m>
      <z-m> -0.388 </z-m>
    </center>
    <axis>
      <x>  1 </x>
      <y>  0 </y> 
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>porteG2</object-name>
    <property>/gear/gear[0]/position-norm</property>
    <factor>90</factor>
    <axis>
      <x1-m> -0.834 </x1-m>
      <y1-m> -0.661 </y1-m>
      <z1-m> -0.427 </z1-m>
      <x2-m> -1.328 </x2-m>
      <y2-m> -0.099 </y2-m>
      <z2-m> -0.591 </z2-m>
    </axis>
  </animation>

  <animation>
    <name>PorteTrainD</name>
    <object-name>porteD1</object-name>
    <object-name>porteD2</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>PorteTrainD</object-name>
    <property>/gear/gear[1]/position-norm</property>
    <factor>38</factor>
    <center>
      <x-m> -1.593 </x-m>
      <y-m>  1.216 </y-m>
      <z-m> -0.388 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y>  1 </y> 
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>PorteTrainD</object-name>
    <property>/gear/gear[1]/position-norm</property>
    <factor>90</factor>
    <center>
      <x-m> -1.593 </x-m>
      <y-m>  1.216 </y-m>
      <z-m> -0.388 </z-m>
    </center>
    <axis>
      <x>  1 </x>
      <y>  0 </y> 
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>porteD2</object-name>
    <property>/gear/gear[1]/position-norm</property>
    <factor>90</factor>
    <axis>
      <x1-m> -1.328 </x1-m>
      <y1-m>  0.099 </y1-m>
      <z1-m> -0.591 </z1-m>
      <x2-m> -0.834 </x2-m>
      <y2-m>  0.661 </y2-m>
      <z2-m> -0.427 </z2-m>
    </axis>
  </animation>

  <!-- Rotation des roues lors du roulage -->
  <animation>
    <type>spin</type>
    <object-name>roueG</object-name>
    <property>/gear/gear[0]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -1.714 </x-m>
      <y-m> -1.026 </y-m>
      <z-m> -1.319 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueD</object-name>
    <property>/gear/gear[1]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -1.714 </x-m>
      <y-m>  1.026 </y-m>
      <z-m> -1.319 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueA</object-name>
    <property>/gear/gear[2]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m>  2.590 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.377 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>

