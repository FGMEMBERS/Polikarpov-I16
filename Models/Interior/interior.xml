<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>intporteG</object-name>
    <object-name>inttourG</object-name>
    <object-name>intporteD</object-name>
    <object-name>inttourD</object-name>
    <object-name>intcockpit</object-name>
    <object-name>intdessus</object-name>
    <object-name>pad</object-name>
    <object-name>aileronwheel</object-name>
    <object-name>elevatorwheel</object-name>


    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
  </animation>

  <!-- We love the glass-shader effect, but for the pilot with bad eyes we need this help:-) -->
  <animation>
    <type>select</type>
    <object-name>intvitres</object-name>
    <condition>
      <not-equals>
        <property>/controls/glass-effect</property>
        <value>0</value>
      </not-equals>
    </condition>
  </animation>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/Polikarpov-I16/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -0.330 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.515 </z-m>
      <roll-deg>    0 </roll-deg>
      <pitch-deg>   0 </pitch-deg>
      <heading-deg> 0 </heading-deg>
    </offsets>
  </model>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Polikarpov-I16/Models/Pilot/pilot.xml</path>
      <condition>
        <not-equals>
          <property>sim/multiplay/generic/int[7]</property>
          <value>1</value>
        </not-equals>
      </condition>
    <offsets>
      <x-m> -0.122 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.296 </z-m>
    </offsets>
  </model>

  <animation>
    <name>IntPorteG</name>
    <object-name>intporteG</object-name>
    <object-name>inttourG</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntPorteG</object-name>
    <property>/instrumentation/doors/crew/position-norm</property>
    <factor> 175.0 </factor>
    <axis>
      <x1-m> -0.086 </x1-m>
      <y1-m> -0.411 </y1-m>
      <z1-m>  0.408 </z1-m>
      <x2-m>  0.214 </x2-m>
      <y2-m> -0.390 </y2-m>
      <z2-m>  0.408 </z2-m>
    </axis>
  </animation>

  <animation>
    <name>IntPorteD</name>
    <object-name>intporteD</object-name>
    <object-name>inttourD</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntPorteD</object-name>
    <property>/instrumentation/doors/passenger/position-norm</property>
    <factor> -175.0 </factor>
    <axis>
      <x1-m>  0.214 </x1-m>
      <y1-m>  0.390 </y1-m>
      <z1-m>  0.408 </z1-m>
      <x2-m> -0.086 </x2-m>
      <y2-m>  0.411 </y2-m>
      <z2-m>  0.408 </z2-m>
    </axis>
  </animation>
  
    <!--  animate the trim-wheels -->
    <animation>
      <type>rotate</type>
      <object-name>elevatorwheel</object-name>
      <property>/controls/flight/elevator-trim</property>
      <factor>-1000</factor>
      <center>
        <x-m>-0.209</x-m>
        <y-m>-0.195</y-m>
        <z-m> 0.55</z-m>
      </center>
      <axis>
        <x>0.0</x>
        <y>1.0</y>
        <z>0.0</z>
      </axis>
    </animation>

    <animation>
      <type>rotate</type>
      <object-name>aileronwheel</object-name>
      <property>/controls/flight/aileron-trim</property>
      <factor>-1000</factor>
      <center>
        <x-m>-0.209</x-m>
        <y-m>-0.195</y-m>
        <z-m> 0.47</z-m>
      </center>
      <axis>
        <x>0.0</x>
        <y>1.0</y>
        <z>0.0</z>
      </axis>
    </animation>

    <!--  trim-wheel control -->
    <animation>
      <type>pick</type>
      <object-name>elevatorwheel</object-name>
      <action>
        <button>0</button>
        <repeatable>true</repeatable>
        <interval-sec>0.2</interval-sec>
         <binding>
          <command>nasal</command>
          <script>i16.applyTrimWheels(0,0)</script>
         </binding>
      </action>
      <action>
        <button>3</button>
        <repeatable>true</repeatable>
        <interval-sec>0.2</interval-sec>
        <binding>
          <command>property-adjust</command>
          <property>/controls/flight/elevator-trim</property>
          <step>0.01</step>
          <min>-1</min>
          <max>1</max>
          <wrap>false</wrap>
        </binding>
      </action>
      <action>
        <button>4</button>
        <repeatable>true</repeatable>
        <interval-sec>0.2</interval-sec>
        <binding>
          <command>property-adjust</command>
          <property>/controls/flight/elevator-trim</property>
          <step>-0.01</step>
          <min>-1</min>
          <max>1</max>
          <wrap>false</wrap>
        </binding>
      </action>
    </animation>

    <animation>
      <type>pick</type>
      <object-name>aileronwheel</object-name>
      <action>
        <button>0</button>
        <repeatable>true</repeatable>
        <interval-sec>0.2</interval-sec>
         <binding>
          <command>nasal</command>
          <script>i16.applyTrimWheels(0,2)</script>
         </binding>
      </action>
      <action>
        <button>3</button>
        <repeatable>true</repeatable>
        <interval-sec>0.2</interval-sec>
        <binding>
          <command>property-adjust</command>
          <property>/controls/flight/aileron-trim</property>
          <step>0.01</step>
          <min>-1</min>
          <max>1</max>
          <wrap>false</wrap>
        </binding>
      </action>
      <action>
        <button>4</button>
        <repeatable>true</repeatable>
        <interval-sec>0.2</interval-sec>
        <binding>
          <command>property-adjust</command>
          <property>/controls/flight/aileron-trim</property>
          <step>-0.01</step>
          <min>-1</min>
          <max>1</max>
          <wrap>false</wrap>
        </binding>
      </action>
    </animation>

  <!-- Gear Lever-->
  <model>
    <path>Aircraft/Polikarpov-I16/Models/Interior/Panel/Instruments/gearlever/gear.xml</path>
    <offsets>
      <x-m> -0.236 </x-m>
      <y-m>  0.209 </y-m>
      <z-m>  0.441 </z-m>
      <heading-deg> -90 </heading-deg>
    </offsets>
  </model>

</PropertyList>

